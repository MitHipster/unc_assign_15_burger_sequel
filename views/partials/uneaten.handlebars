<h4 id="need-to-try" class="header offset">Need to Try<a class="btn btn-floating pulse tooltipped modal-trigger" href="#add" data-position="bottom" data-delay="50" data-tooltip="Add a Burger"><i class="material-icons">add</i></a></h4>
<div class="row">
  {{#each burgers}}
    {{#unless this.devoured}}
      <div class="col s12 m6 l4">
        <div class="card">
          <div class="card-content">
            <span class="card-title activator grey-text text-darken-4">{{~this.burger_name~}}<i class="material-icons right">more_vert</i></span>
            <p>{{~this.rest_name~}}</p>
            <form action="/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="true">
              <button type="submit" class="waves-effect waves-light btn">Devour It</button>
            </form>
          </div>
          <div class="card-reveal">
            <span class="card-title grey-text text-darken-4">Description<i class="material-icons right">close</i></span>
            <p>{{~this.description~}}</p>
          </div>
        </div>
      </div>
    {{/unless}}
  {{/each}}
</div>
